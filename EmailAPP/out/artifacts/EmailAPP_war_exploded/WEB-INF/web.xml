<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>checkAvailability</servlet-name>
        <servlet-class>randStuff.checkAvailability</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkAvailability</servlet-name>
        <url-pattern>/checkAvailability</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Intro</servlet-name>
        <jsp-file>/Intro/intro.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Intro</servlet-name>
        <url-pattern>/intro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/Login/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <jsp-file>/SignUp/signup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Mailuri</servlet-name>
        <jsp-file>/Dashboard/mailuri/mailuri.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mailuri</servlet-name>
        <url-pattern>/mailuri</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Prieteni</servlet-name>
        <jsp-file>/Dashboard/prieteni/prieteni.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Prieteni</servlet-name>
        <url-pattern>/prieteni</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Rapoarte</servlet-name>
        <jsp-file>/Dashboard/rapoarte/rapoarte.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rapoarte</servlet-name>
        <url-pattern>/rapoarte</url-pattern>
    </servlet-mapping>
</web-app>